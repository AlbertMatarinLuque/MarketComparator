<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MarketComparator" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/app_bar_color</item>
        <item name="colorPrimaryVariant">@color/app_out_bar_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MarketComparator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MarketComparator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MarketComparator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>