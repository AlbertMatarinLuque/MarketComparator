<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:theme="@style/AppTheme.Usual"
            tools:context="cat.copernic.daniel.marketcomparator.ui.configuration.mercados.GestionMercados">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="50dp"
                android:text="@string/nombre_del_mercado"
                android:textColor="@color/dark_green"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tvNombreMercado"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/dark_green"
                android:hint="@string/nombre_mercado_hinr"
                android:inputType="textPersonName"
                android:textColor="@color/dark_green"
                android:textColorHint="@color/dark_green" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:text="@string/descripcion_del_mercado"
                android:textSize="18dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/tvDescripcionMercado"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/dark_green"
                android:gravity="start|top"
                android:hint="@string/descripcion_mercado_hint"
                android:inputType="textMultiLine"
                android:textColor="@color/dark_green"
                android:textColorHint="@color/dark_green" />

            <EditText
                android:id="@+id/tvPuntuaconMercado"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/dark_green"
                android:hint="@string/puntuacion"

                android:inputType="textShortMessage|number|textPersonName|numberDecimal"
                android:textColor="@color/dark_green"
                android:textColorHint="@color/dark_green" />

            <Button
                android:id="@+id/btnAddMarket"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="75dp"
                android:text="@string/insertar_imagen_y_subir" />


        </LinearLayout>
    </ScrollView>
</layout>